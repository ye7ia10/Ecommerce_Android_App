<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:background="@drawable/register">



    <ImageView
        android:id="@+id/logo_register"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/applogo"
        android:layout_marginTop="170dp"/>

    <EditText
        android:id="@+id/name_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_register"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:hint="Enter Your Name"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/phoneNumber_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_reg"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:hint="Enter Phone Number"
        android:inputType="number"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/password_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumber_reg"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        />



    <Button
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/password_reg"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Create Account"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true" />



</RelativeLayout>